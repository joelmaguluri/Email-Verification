.bg-contact2(style="background-image: url('images/bg-01.jpg');")
  .container-contact2
    .wrap-contact2
      form.contact2-form.validate-form
        span.contact2-form-title
          | Contact Us
        .wrap-input2.validate-input(data-validate='Name is required')
          input.input2(type='text' name='name')
          span.focus-input2(data-placeholder='NAME')
        .wrap-input2.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input.input2(type='text' name='email')
          span.focus-input2(data-placeholder='EMAIL')
        .wrap-input2.validate-input(data-validate='Message is required')
          textarea.input2(name='message')
          span.focus-input2(data-placeholder='MESSAGE')
        .container-contact2-form-btn
          .wrap-contact2-form-btn
            .contact2-form-bgbtn
            button.contact2-form-btn
              | Send Your Message
